	<title>增添元素</title>
	<script src="jquery-3.3.1.min.js"></script>
	<script>
	/**
	
		$(document).ready(function(){
			$('#btn').on('click', function(){
				var parse1 = "<p>HTML 创建段落</p>";
				var parse2 = $('<p></p>').text("JQuery 创建段落");
				var parse3 = document.createElement("p");
				parse3.innerHTML = "通过DOM创建段落";
				$('body').append(parse1, parse2, parse3);
			});
		});
	</script>
