<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>增添元素</title>
	<script src="jquery-3.3.1.min.js"></script>
	<script>
	/*
		JQuery增添元素
		append()
		prepend()
		after()
		before()
		删除元素
		remove()
		empty()
	*/
		$(document).ready(function(){
			$('#btn').on('click', function(){
				var parse1 = "<p>HTML 创建段落</p>";
				var parse2 = $('<p></p>').text("JQuery 创建段落");
				var parse3 = document.createElement("p");
				parse3.innerHTML = "通过DOM创建段落";
				$('div').append(parse1, parse2, parse3);
			});
			$('btn2').click(function(){
				
			});
		});
	</script>
</head>
<body>
	<button type="button" id="btn">按钮</button>
	<div style="background-color: aqua;border: 1px solid black; width: 200px; height: 200px;"></div>
	<button id="btn2">按钮2</button>
</body>
