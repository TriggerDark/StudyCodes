	<script>
	/*
		设置并且获取样式(参数，一个值是获取，两个值是设置)
		addClass()
		removeClass()
		toggleClass()
		css()
	*/
		$(document).ready(function(){
			$('#btn').click(function(){
				$(document.body).toggleClass("night");
			});
		});
	</script>
