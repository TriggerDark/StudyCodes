<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title></title>
    <script type="text/javascript" src="jquery.js"></script>
    <script>
        var p = ["广东省", "湖南省", "福建省"];
        var provinces = [
            ["深圳市", "东菀市"],
            ["长沙市", "株洲市"],
            ["厦门市", "福州市"]
        ];
        $(function() {
            $("#province").empty();
            $("#province").append("<option>---请选择---</option>");
            $(p).each(function (i, province) {
                $("#province").append("<option value=" + i + ">" + province + "</option>");
            });
            $("#province").change(function() {
                var cities  = provinces[this.value];//得到省下面的城市的值
                $("#city").empty();
                $(cities).each(function(i, city) {
                    $("#city").append("<option>" + city + "</option>");
                });
            });
        });

    </script>
</head>
<body>
    <select id="province"></select>
    <select name="" id="city"></select>
</body>
</html>