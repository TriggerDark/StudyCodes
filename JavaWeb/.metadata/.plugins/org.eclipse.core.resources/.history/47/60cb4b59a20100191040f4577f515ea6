<script>
var id;
$(document).ready(function(){
	$("#btn").attr("disable", true);
	id=setInterval("countDown()", 1000);
});

var leftSeconds=10;
function countDown(){
	if(leftSeconds<=0){
		
	}
	leftSeconds--;
	$("#btn").val("仔细请阅读"+leftSeconds+'s');
}
